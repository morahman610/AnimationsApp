<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondConstraintSet">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/sillicon_valley"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintBottom_toTopOf="@+id/descriptionTxt"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:onClick="toggleOnClick"/>
    <TextView
            android:text="Silicon Valley is a region in the southern part of the San Francisco Bay Area in Northern California that serves as a global center for high technology, innovation and social media. It corresponds roughly to the geographical Santa Clara Valley. San Jose is the Valley's largest city, the third largest in California, and the tenth largest in the United States. Other major Silicon Valley cities include Palo Alto, Menlo Park, Cupertino, Santa Clara, Mountain View, and Sunnyvale.[1] The San Jose Metropolitan Area has the third highest GDP per capita in the world (after Zurich, Switzerland and Oslo, Norway), according to the Brookings Institution."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/descriptionTxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#FFFFFF" android:background="#000000"
            android:textAlignment="center"/>
    <TextView
            android:text="Scilicon Valley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="36sp"
            android:background="#FF0000" android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2" app:layout_constraintEnd_toStartOf="@+id/imageView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:background="#FFFFFF"
            android:textStyle="bold" android:textSize="24sp" android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/view" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTxt"
            android:background="@drawable/gradient"/>
</android.support.constraint.ConstraintLayout>