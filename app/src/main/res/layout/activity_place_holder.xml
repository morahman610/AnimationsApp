<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaceHolder" android:id="@+id/placeholderLayout">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="70dp"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/textView3"/>
    <View
            android:layout_width="100dp"
            android:layout_height="100dp" tools:layout_editor_absoluteY="362dp"
            android:id="@+id/view2" android:background="@drawable/circle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <android.support.constraint.Placeholder android:layout_width="80dp" android:layout_height="80dp"
                                            app:layout_constraintBottom_toBottomOf="@+id/view2"
                                            app:layout_constraintEnd_toEndOf="@+id/view2"
                                            app:layout_constraintStart_toStartOf="@+id/view2"
                                            app:layout_constraintTop_toTopOf="@+id/view2"
                                            android:id="@+id/placeHolder"/>
    <TextView
            android:text="N"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/one" android:background="@drawable/redcircle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/two" android:textSize="36sp" android:textAlignment="center"
            android:onClick="oneOnClick"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/two" android:background="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="@+id/one" app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/three"
            android:onClick="twoOnClick" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/three" android:background="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="@+id/two" app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/four"
            android:layout_marginTop="4dp" android:onClick="threeOnClick" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/four" android:background="@drawable/redcircle"
            app:layout_constraintTop_toTopOf="@+id/three" app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="fourOnClick" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>